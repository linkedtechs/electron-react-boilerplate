{
	"compilerOptions": {
		"target": "es5",
		"moduleResolution": "node",
		"pretty": true,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowJs": true,
		"jsx": "preserve"
	},
	"include": [
		"src/**/*"
	],
	"exclude": ["node_modules"]
}
